@using CurrieTechnologies.Razor.SweetAlert2
@using ECommerceWeb.WebApp.Auth
@using ECommerceWeb.WebApp.Proxy.Interfaces
@using Microsoft.AspNetCore.Components.Authorization

@inject AuthenticationStateProvider AuthenticationStateProvider
@inject NavigationManager NavigationManager
@inject SweetAlertService Swal
@inject ICarritoProxy CarritoProxy
@implements IDisposable

<nav class="navbar navbar-expand-lg bg-primary" data-bs-theme="dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="#">Tienda Virtual</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarColor01">
            <ul class="navbar-nav me-auto">
                <li class="nav-item">
                    <NavLink class="nav-link" href="#">Inicio</NavLink>
                </li>
                <li class="nav-item">
                    <NavLink class="nav-link" href="categorias/list">Categorías</NavLink>
                </li>
                <li class="nav-item">
                    <NavLink class="nav-link" href="productos/list">Productos</NavLink>
                </li>
            </ul>
        </div>

        <a class="btn btn-outline-light m-3" href="carrito">
            <i class="bi bi-cart4 me-2"></i>Carrito
            <span class="badge bg-danger text-white rounded-pill">@MostrarCantidadCarrito()</span>
        </a>

        <!--Mostrar datos de autenticación-->
        <div>
            <AuthorizeView>
                <Authorized>
                    <span class="navbar-text text-white me-3">
                        <i class="bi bi-person-circle me-2"></i>@context.User.Identity!.Name
                    </span>
                    <button class="btn btn-outline-light" @onclick="CerrarSesion">
                        <i class="bi bi-box-arrow-right me-2"></i>Cerrar Sesión
                    </button>
                </Authorized>
                <NotAuthorized>
                    <NavLink class="btn btn-outline-light" href="/account/login">
                        <i class="bi bi-box-arrow-right me-2"></i>Iniciar Sesión
                    </NavLink>
                    <NavLink class="btn btn-outline-light" href="/account/register">
                        <i class="bi bi-person-plus me-2"></i>Registrarse
                    </NavLink>
                </NotAuthorized>
            </AuthorizeView>
        </div>
    </div>
</nav>

@code{
    private async Task CerrarSesion()
    {
        var result = await Swal.FireAsync(new SweetAlertOptions
        {
            Title = "Cerrar Sesión",
            Text = "¿Estás seguro que deseas cerrar sesión?",
            Icon = SweetAlertIcon.Question,
            ShowCancelButton = true,
            ConfirmButtonText = "Sí, cerrar sesión",
            CancelButtonText = "Cancelar"
        });

        if (!result.IsConfirmed)
        {
            return;
        }

        var auth = (AuthenticationService)AuthenticationStateProvider;
        await auth.Autenticar(null);
        NavigationManager.NavigateTo("/", forceLoad: true);
    }

    private int MostrarCantidadCarrito()
    {
        return CarritoProxy.CantidadProductos();
    }

    protected override void OnInitialized()
    {
        //Nos suscribimos al evento del carrito
        CarritoProxy.ActualizarVista += StateHasChanged;
    }

    //Nos desuscribimos al evento del carrito
    public void Dispose()
    {
        CarritoProxy.ActualizarVista -= StateHasChanged;
    }
}