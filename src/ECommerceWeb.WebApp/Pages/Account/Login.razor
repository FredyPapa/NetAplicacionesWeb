@page "/account/login"

@using Blazored.Toast.Services
@using ECommerceWeb.Common.Request
@using ECommerceWeb.Common.Response
@using ECommerceWeb.WebApp.Auth
@using Microsoft.AspNetCore.Components.Authorization

@inject AuthenticationStateProvider AuthStateProvider
@inject NavigationManager NavigationManager
@inject HttpClient HttpClient
@inject IToastService ToastService

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-5">
            <div class="card shadow-lg mt-5">
                <div class="card-header">
                    <h3>Inicio de Sesion</h3>
                </div>
                <div class="card-body">
                    <EditForm Model="Model" OnValidSubmit="ValidLogin">
                        <DataAnnotationsValidator />
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" id="usuario" @bind-value="Model.UserName"
                                   placeholder="usuario" autocomplete="true" />
                            <label for="usuario">Usuario</label>
                            <ValidationMessage For="() => Model.UserName" />
                        </div>
                        <div class="form-floating mb-3">
                            <input type="password" class="form-control" id="password" @bind-value="Model.Password"
                                   placeholder="clave" autocomplete="true" />
                            <label for="usuario">Clave</label>
                            <ValidationMessage For="() => Model.Password" />
                        </div>
                        <div class="d-grid gap-1 mt-4 mb-0">
                            <button class="btn btn-primary" type="submit">Ingresar</button>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private LoginDtoRequest Model { get; set; } = new();

    private bool IsLoading { get; set; }

    private async Task ValidLogin()
    {
        try
        {
            IsLoading = true;
            var response = await HttpClient.PostAsJsonAsync("api/Usuarios/Login", Model);
            if (response.IsSuccessStatusCode)
            {
                var result = await response.Content.ReadFromJsonAsync<LoginDtoResponse>();
                if (AuthStateProvider is AuthenticationService customAuthStateProvider)
                {
                    await customAuthStateProvider.Autenticar(result);
                    NavigationManager.NavigateTo("/");
                }
            }
            else
            {
                var error = await response.Content.ReadFromJsonAsync<LoginDtoResponse>();
                // Manejar el error, mostrar mensaje al usuario, etc.
                ToastService.ShowError(error?.ErrorMessage ?? "Error desconocido");
            }
        }
        catch (Exception ex)
        {
            ToastService.ShowError(ex.Message);
        }
        finally
        {
            IsLoading = false;
        }
    }
}
