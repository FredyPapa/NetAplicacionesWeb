@using Blazored.Toast.Services
@using CurrieTechnologies.Razor.SweetAlert2
@using ECommerceWeb.Common
@page "/categorias/list"
@inject HttpClient HttpClient
@inject SweetAlertService Swal
@inject IToastService ToastService
@attribute [Authorize]

<h3 class="mb-3">Lista de Categorías</h3>

<div class="mb-3">
    <button type="button" class="btn btn-primary mb-3" @onclick="LoadData"><i class="bi bi-arrow-clockwise me-1"></i>Cargar Lista</button>
    <a href="/categoria/new" class="btn btn-success mb-3"><i class="bi bi-plus-circle me-1"></i>Nueva Categoría</a>
</div>


@if (Categorias.Count == 0)
{
    <p class="alert alert-warning">No hay datos para mostrar</p>
}
else
{
    <table class="table table-hover table-striped">
        <thead>
            <tr class="table-primary">
                <th>Id</th>
                <th>Nombre</th>
                <th>Despcripción</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var categoria in Categorias)
            {
                <tr>
                    <td>@categoria.Id</td>
                    <td>@categoria.Nombre</td>
                    <td>@categoria.Descripcion</td>
                    <td>
                        <a href="/categorias/edit/@categoria.Id" class="btn btn-warning btn-sm"><i class="bi bi-pencil me-1"></i></a>
                        <button class="btn btn-danger btn-sm" @onclick="() => DeleteCategoria(categoria.Id)"><i class="bi bi-trash me-1"></i></button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}


